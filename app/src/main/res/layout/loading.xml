<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/background"
    tools:context=".Loading">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/main_screen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="35dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/loading_logo_bg">

                    <ImageView
                        android:id="@+id/noteaLogoBg"
                        android:layout_width="205dp"
                        android:layout_height="226dp"
                        android:layout_centerInParent="true"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="100dp"
                        android:background="@drawable/notea_logo_vertical_nofill" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/loading_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/login_form"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:visibility="gone">
                    <TextView
                        android:id="@+id/loginText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/alatsi"
                        android:text="Login"
                        android:textSize="40sp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:letterSpacing="0" />
                    <EditText
                        android:id="@+id/emailLogin"
                        android:layout_width="325dp"
                        android:layout_height="50dp"
                        android:background="@drawable/inputbg1"
                        android:layout_below="@id/loginText"
                        android:layout_marginTop="15px"
                        android:fontFamily="@font/alatsi"
                        android:hint="email@email.com"
                        android:textColor="#80000000"
                        android:paddingHorizontal="50px"
                        android:inputType="textEmailAddress"
                        android:letterSpacing="0.2"/>
                    <TextView
                        android:id="@+id/emailLoginText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/alatsi"
                        android:text="Email"
                        android:textSize="18sp"
                        android:layout_below="@id/emailLogin"
                        android:textColor="@color/white"
                        android:letterSpacing="0.2"/>
                    <EditText
                        android:id="@+id/passwordLogin"
                        android:layout_width="325dp"
                        android:layout_height="50dp"
                        android:background="@drawable/inputbg1"
                        android:layout_below="@id/emailLoginText"
                        android:layout_marginTop="25px"
                        android:hint="password"
                        android:textColor="#80000000"
                        android:paddingHorizontal="50px"
                        android:inputType="textPassword"
                        android:letterSpacing="0.2"
                        android:fontFamily="@font/alatsi"/>

                    <TextView
                        android:id="@+id/passwordLoginText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Password"
                        android:textSize="18sp"
                        android:layout_below="@id/passwordLogin"
                        android:textColor="@color/white"
                        android:letterSpacing="0.2"
                        android:fontFamily="@font/alatsi"/>

                    <TextView
                        android:layout_marginTop="30px"
                        android:id="@+id/loginButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/transparent_button"
                        android:text="Login"
                        android:layout_below="@id/passwordLoginText"
                        android:layout_centerHorizontal="true"
                        android:letterSpacing="0.2"
                        android:clickable="true"
                        android:onClick="login"
                        android:paddingHorizontal="80px"
                        android:paddingVertical="20px"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/alatsi"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/dontText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/loginButton"
                        android:text="Don't have an account?"
                        android:textSize="15sp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20px"
                        android:textStyle="bold"
                        android:textColor="#BF000000"
                        android:letterSpacing="0.2"
                        android:fontFamily="@font/alatsi"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/dontText"
                        android:text="Click here to sign up"
                        android:textSize="15sp"
                        android:layout_centerHorizontal="true"
                        android:textStyle="italic"
                        android:textColor="@color/secondary"
                        android:clickable="true"
                        android:letterSpacing="0.2"
                        android:onClick="popSignup"
                        android:fontFamily="@font/alatsi" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/register_form"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:visibility="gone"
                    android:paddingHorizontal="30dp">
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/back_icon"
                        android:backgroundTint="#00000000"
                        android:layout_alignParentEnd="true"
                        app:tint="@color/white"
                        android:layout_marginTop="10dp"
                        android:onClick="closeSignup"
                        android:contentDescription="TODO" />
                    <TextView
                        android:id="@+id/regText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/alatsi"
                        android:text="Register"
                        android:textSize="40sp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:letterSpacing="0" />
                    <EditText
                        android:id="@+id/nameRegister"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/inputbg1"
                        android:layout_below="@id/regText"
                        android:layout_marginTop="15px"
                        android:fontFamily="@font/alatsi"
                        android:hint="name"
                        android:textColor="#80000000"
                        android:paddingHorizontal="50px"
                        android:inputType="textPersonName"
                        android:letterSpacing="0.2"/>
                    <TextView
                        android:id="@+id/nameRegisterText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/alatsi"
                        android:text="Name"
                        android:textSize="18sp"
                        android:layout_below="@id/nameRegister"
                        android:textColor="@color/white"
                        android:letterSpacing="0.2"/>
                    <EditText
                        android:id="@+id/emailRegister"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/inputbg1"
                        android:layout_below="@id/nameRegisterText"
                        android:layout_marginTop="15px"
                        android:fontFamily="@font/alatsi"
                        android:hint="email@email.com"
                        android:textColor="#80000000"
                        android:paddingHorizontal="50px"
                        android:inputType="textEmailAddress"
                        android:letterSpacing="0.2"/>
                    <TextView
                        android:id="@+id/emailRegisterText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/alatsi"
                        android:text="Email"
                        android:textSize="18sp"
                        android:layout_below="@id/emailRegister"
                        android:textColor="@color/white"
                        android:letterSpacing="0.2"/>
                    <EditText
                        android:id="@+id/passwordRegister"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/inputbg1"
                        android:layout_below="@id/emailRegisterText"
                        android:layout_marginTop="25px"
                        android:hint="password"
                        android:textColor="#80000000"
                        android:paddingHorizontal="50px"
                        android:inputType="textPassword"
                        android:letterSpacing="0.2"
                        android:fontFamily="@font/alatsi"/>

                    <TextView
                        android:id="@+id/passwordRegisterText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Password"
                        android:textSize="18sp"
                        android:layout_below="@id/passwordRegister"
                        android:textColor="@color/white"
                        android:letterSpacing="0.2"
                        android:fontFamily="@font/alatsi"/>

                    <TextView
                        android:layout_marginTop="30px"
                        android:id="@+id/registerButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/transparent_button"
                        android:text="REGISTER"
                        android:layout_below="@id/passwordRegisterText"
                        android:layout_centerHorizontal="true"
                        android:letterSpacing="0.2"
                        android:clickable="true"
                        android:onClick="register"
                        android:paddingHorizontal="80px"
                        android:paddingVertical="20px"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/alatsi"
                        android:textColor="@color/white" />
                </RelativeLayout>

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

    <RelativeLayout android:id="@+id/startup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/secondary"
        android:visibility="gone">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/notea_logo_vertical_fill"/>
    </RelativeLayout>
</RelativeLayout>